{
  "name": "connect4",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "format": "prettier --write -- .",
    "lint": "prettier --check -- .",
    "typecheck": "npm run --workspace frontend typecheck",
    "dev": "npm run --workspace frontend dev",
    "build": "npm run --workspace frontend build"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 119,
    "bracketSpacing": true
  },
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
