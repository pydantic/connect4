{
  "name": "connect4",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "format": "prettier --write -- frontend",
    "lint": "prettier --check -- frontend",
    "typecheck": "pnpm --filter ./frontend typecheck",
    "dev": "pnpm --filter ./frontend dev",
    "build": "pnpm --filter ./frontend build"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 119,
    "bracketSpacing": true
  },
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
